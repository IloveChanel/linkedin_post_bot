# LinkedIn API Credentials
# Get these from: https://www.linkedin.com/developers/apps
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_PERSON_ID=urn:li:person:YOUR_PERSON_ID

# Google Drive API Credentials
# Download service account JSON from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=path/to/your/service-account-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Optional: Custom timezone (defaults to America/New_York)
TZ=America/New_York
